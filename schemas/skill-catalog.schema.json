{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelligentcode.ai/schemas/skill-catalog.schema.json",
  "title": "ICA Skill Catalog",
  "type": "object",
  "required": ["generatedAt", "source", "version", "sources", "skills"],
  "properties": {
    "generatedAt": { "type": "string", "format": "date-time" },
    "source": { "type": "string", "enum": ["local-repo", "github-release", "multi-source"] },
    "version": { "type": "string" },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "repoUrl", "transport", "official", "enabled", "skillsRoot", "removable"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "repoUrl": { "type": "string" },
          "transport": { "type": "string", "enum": ["https", "ssh"] },
          "official": { "type": "boolean" },
          "enabled": { "type": "boolean" },
          "skillsRoot": { "type": "string" },
          "credentialRef": { "type": "string" },
          "removable": { "type": "boolean" },
          "lastSyncAt": { "type": "string", "format": "date-time" },
          "lastError": { "type": "string" },
          "localPath": { "type": "string" },
          "localSkillsPath": { "type": "string" },
          "revision": { "type": "string" }
        }
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "skillId",
          "sourceId",
          "sourceName",
          "sourceUrl",
          "skillName",
          "name",
          "description",
          "category",
          "dependencies",
          "compatibleTargets",
          "resources",
          "sourcePath"
        ],
        "properties": {
          "skillId": { "type": "string" },
          "sourceId": { "type": "string" },
          "sourceName": { "type": "string" },
          "sourceUrl": { "type": "string" },
          "skillName": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "category": { "type": "string" },
          "scope": { "type": "string" },
          "subcategory": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "author": { "type": "string" },
          "contactEmail": { "type": "string" },
          "website": { "type": "string" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "compatibleTargets": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["claude", "codex", "cursor", "gemini", "antigravity"]
            }
          },
          "resources": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "path"],
              "properties": {
                "type": { "type": "string", "enum": ["references", "scripts", "assets"] },
                "path": { "type": "string" }
              }
            }
          },
          "sourcePath": { "type": "string" }
        }
      }
    }
  }
}
